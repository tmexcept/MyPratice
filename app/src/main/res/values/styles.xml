<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="TimeAndDesZoneView">
        <attr name="rectBoldWidth" format="dimension"/>
        <attr name="rectInPathWidth" format="dimension"/>
        <attr name="rectPadding" format="dimension"/>
        <attr name="linePath" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="CustomTextShowMore">
        <attr name="maxLines" format="dimension"/>
    </declare-styleable>

</resources>
